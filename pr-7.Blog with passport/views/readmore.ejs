<%- include('Header') %>

<section class="py-5" style="background: linear-gradient(45deg, #ff00ff, #ff6600); min-height: 100vh; display: flex; align-items: center; justify-content: center; overflow: hidden;">
    <div class="container">
        <div class="row align-items-center text-center">
            <!-- Image Section -->
            <div class="col-lg-6 col-md-6 col-12 mb-4 d-flex justify-content-center">
                <% if (single && single.image) { %>
                    <img src="<%= single.image %>" alt="Image" class="rounded shadow-lg animated-image" 
                        style="max-width: 90%; border-radius: 30px; object-fit: cover; height: auto; border: 5px solid #ffcc00; transform: rotate(-3deg);">
                <% } else { %>
                    <p class="text-muted text-center" style="font-size: 1.5rem; color: #fff; font-weight: bold;">🚫 No image available</p>
                <% } %>
            </div>
            <!-- Content Section -->
            <div class="col-lg-6 col-md-6 col-12">
                <div class="p-5 shadow-lg crazy-box" 
                    style="border-radius: 30px; background: rgba(255, 255, 255, 0.2); backdrop-filter: blur(15px); box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);">
                    
                    <h2 class="mb-3 text-white" style="font-size: 2.5rem; font-weight: bold; text-transform: uppercase;">
                        📝 <%= single.title ? single.title : "No Title Available" %>
                    </h2>

                    <p class="text-white mb-4" style="font-size: 1.5rem; font-weight: 500;">
                        📖 <%= single.description ? single.description : "No Description Available" %>
                    </p>

                    <h5 class="mb-4 text-white" style="font-size: 1.2rem; font-weight: 600;">
                        👤 <%= single.author ? single.author : "Unknown Author" %>
                    </h5>

                    <!-- Buttons Section -->
                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        <a href="/editBlog?editId=<%= single._id %>" 
                            class="btn shadow neon-btn">
                            ✏️ Edit
                        </a>
                        <a href="/deleteBlog?deletId=<%= single._id %>" 
                            class="btn shadow neon-btn delete-btn">
                            🗑️ Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('Footer') %>

<style>
/* General Styles */
body {
    font-family: 'Poppins', sans-serif;
    background: black;
    color: white;
    overflow-x: hidden;
}

h2, p, h5 {
    text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
}

/* Neon Button */
.neon-btn {
    padding: 15px 50px;
    font-size: 1.2rem;
    font-weight: bold;
    background: linear-gradient(90deg, #ff00ff, #ff6600);
    border: none;
    color: white;
    border-radius: 20px;
    box-shadow: 0 4px 15px rgba(255, 102, 0, 0.7);
    transition: all 0.3s ease-in-out;
}

.neon-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(255, 102, 0, 0.9);
}

.delete-btn {
    background: linear-gradient(90deg, #ff0000, #ff6600);
    box-shadow: 0 4px 15px rgba(255, 0, 0, 0.7);
}

.delete-btn:hover {
    box-shadow: 0 6px 20px rgba(255, 0, 0, 0.9);
}

/* Crazy Box */
.crazy-box {
    animation: crazyMove 2s infinite alternate ease-in-out;
}

@keyframes crazyMove {
    0% { transform: rotate(0deg) scale(1); }
    100% { transform: rotate(2deg) scale(1.05); }
}

/* Image Animation */
.animated-image {
    animation: shake 1.5s infinite;
}

@keyframes shake {
    0%, 100% { transform: rotate(-3deg); }
    50% { transform: rotate(3deg); }
}
</style>
