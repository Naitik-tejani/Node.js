<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crazy Animated Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        /* Animations for form appearance */
        @keyframes bounceIn {
            0% { transform: scale(0); opacity: 0; }
            80% { transform: scale(1.1); opacity: 1; }
            100% { transform: scale(1); }
        }

        @keyframes neonGlow {
            0% { box-shadow: 0 0 5px #ff007f; }
            50% { box-shadow: 0 0 20px #ff007f; }
            100% { box-shadow: 0 0 5px #ff007f; }
        }

        @keyframes pulse {
            0% { transform: scale(1); background: #bc0b13; }
            50% { transform: scale(1.1); background: #ff5733; }
            100% { transform: scale(1); background: #bc0b13; }
        }

        @keyframes bgGlow {
            0% { background-color: #222; }
            50% { background-color: #444; }
            100% { background-color: #222; }
        }

        /* Styling the body and background */
        body {
            background: url('https://akm-img-a-in.tosshub.com/indiatoday/images/story/202012/Netflix-New-Feature-Audio-Only_1200x768.jpeg?size=690:388');
            background-size: cover;
            color: rgb(243, 243, 243);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            animation: bgGlow 5s infinite alternate;
        }

        /* Card container styling */
        .card {
            width: 50%;
            background: rgb(235, 241, 248);
            color: black;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            animation: bounceIn 1s ease-out;
        }

        .card-header {
            background: #bc0b13;
            color: white;
            font-size: 30px;
            text-align: center;
            font-weight: bold;
            transition: transform 0.5s ease-in-out;
        }

        .card-header:hover {
            transform: rotate(2deg);
        }

        /* Input field styling */
        .form-control {
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

        .form-control:focus {
            border-color: #ff007f;
            box-shadow: 0 0 10px #ff007f;
            animation: neonGlow 1s infinite alternate;
        }

        /* Custom button styling */
        .btn-custom {
            background: #bc0b13;
            color: white;
            border: none;
            transition: all 0.3s ease-in-out;
            animation: pulse 1s infinite alternate;
        }

        .btn-custom:hover {
            background: #ff007f;
            transform: scale(1.2);
        }
    </style>
</head>

<body>
    <div class="card p-4">
        <div class="card-header">Book Now</div>
        <div class="card-body">
            <form id="bookingForm" action="/movie/insertdata" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" name="description" id="description" class="form-control" placeholder="Enter description" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input type="number" name="price" id="price" class="form-control" placeholder="Enter price" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Image</label>
                    <input type="file" name="file" id="file" class="form-control" accept="image/*" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-custom">Submit</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a href="/movie" class="btn btn-secondary">View</a>
            <a href="/" class="btn btn-secondary">Home</a>
        </div>
    </div>

    <script>
        document.getElementById("bookingForm").addEventListener("submit", function(event) {
            let name = document.getElementById("name").value;
            let description = document.getElementById("description").value;
            let price = document.getElementById("price").value;
            let file = document.getElementById("file").files[0];

            if (!name || !description || !price || !file) {
                alert("All fields are required!");
                event.preventDefault(); // Prevent form submission
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
