<%- include('../header') %>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Edit Category Details</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card animate-form">
                        <form method="post" action="/category/updatecategory" class="form-horizontal">
                            <div class="card-body">
                                <input type="hidden" value="<%= oneRowRecord?.id %>" name="editId">
                                <h4 class="card-title">Category</h4>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-right control-label col-form-label">Category</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control glowing-input" name="category"
                                            value="<%= oneRowRecord?.category %>" placeholder="Category">
                                    </div>
                                </div>
                            </div>
                            <div class="border-top">
                                <div class="card-body">
                                    <button type="submit" class="btn btn-primary shake-button">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Crazy fade-out effect for the success message
            window.onload = function () {
                setTimeout(function () {
                    const successMessage = document.getElementById('success-message');
                    if (successMessage) {
                        successMessage.style.transition = "opacity 1s, transform 1s";
                        successMessage.style.opacity = "0";
                        successMessage.style.transform = "rotate(360deg)";
                        setTimeout(() => successMessage.style.display = "none", 1000);
                    }
                }, 3000);
            };
        </script>

        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
        </footer>
    </div>

    <%- include('../footer') %>

    <style>
        /* Bounce effect when the form appears */
        .animate-form {
            animation: bounceIn 1s ease-in-out;
        }

        @keyframes bounceIn {
            0% { transform: scale(0.5); opacity: 0; }
            50% { transform: scale(1.1); opacity: 0.8; }
            100% { transform: scale(1); opacity: 1; }
        }

        /* Glowing effect on the input field */
        .glowing-input:focus {
            animation: glow 1s infinite alternate;
            border-color: #ff0077;
            box-shadow: 0px 0px 15px rgba(255, 0, 119, 0.8);
        }

        @keyframes glow {
            from { box-shadow: 0 0 5px #ff0077; }
            to { box-shadow: 0 0 20px #ff0077; }
        }

        /* Submit button shakes when hovered */
        .shake-button:hover {
            animation: shake 0.3s infinite;
        }

        @keyframes shake {
            0% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            50% { transform: translateX(5px); }
            75% { transform: translateX(-5px); }
            100% { transform: translateX(0); }
        }
    </style>
