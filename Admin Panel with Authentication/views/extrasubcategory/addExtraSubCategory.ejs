<%- include('../header') %>

    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Add ExtraSubCategory</h4>
                    <div class="ml-auto text-right">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Library</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->

            <div class="row">
                <div class="col-8">
                    <% if(locals.message?.success) { %>
                        <div class="alert alert-success" id="success-message">
                            <%= locals.message?.success %>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">

                            <div class="card">
                                <form method="post" action="/extrasubcategory/insertextrasubcategory" class="form-horizontal">
                                    <div class="card-body">
                                        <h4 class="card-title">ExtraSubCategory</h4>

                                        <div class="form-group row">
                                            <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                                Category</label>
                                            <div class="col-sm-9">
                                                <select name="category" id="category" onchange="categoryChange()" class="form-control">
                                                    <option>--- Select Category ---</option>
                                                    <% category.map((val)=>{ %>
                                                        <option value="<%= val?.id %>">
                                                            <%= val?.category %>
                                                        </option>
                                                        <% }) %>
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="fname" class="col-sm-3 text-right control-label col-form-label">
                                                SubCategory</label>
                                            <div class="col-sm-9">
                                                <select name="subcategory" id="subcategory" class="form-control">
                                                    <option>---select subcategory---</option>
                                                </select>
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label for="fname"
                                                class="col-sm-3 text-right control-label col-form-label">ExtraSubCategory</label>
                                            <div class="col-sm-9">
                                                <input type="text" class="form-control" name="extrasubcategory"
                                                    placeholder="ExtraSubCategory">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="border-top">
                                        <div class="card-body">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>



                </div>

            </div>
            <!-- editor -->

            <!-- ============================================================== -->
            <!-- End PAge Content -->
            
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- footer -->
        <!-- ============================================================== -->
       
        <footer class="footer text-center">
            All Rights Reserved by Matrix-admin. Designed and Developed by <a
                href="https://wrappixel.com">WrapPixel</a>.
        </footer>

        <script>
            const categoryChange = () => {
                let categoryid = document.getElementById('category').value;
                $.ajax({
                    type: 'GET',
                    url: `/extrasubcategory/ajaxcategorywiserecords?categoryId=${categoryid}`,
                    success: function (data) {
                        let subcategory = data.subcategory;
                        let tbl = "";
                        tbl += `<option>---select subcategory---</option>`;
                        subcategory.map((val)=>{
                            tbl += `
                                        <option value=${val?._id}>${val.subcategory}</option>
                                    `
                        })  
                        document.getElementById('subcategory').innerHTML = tbl;
                        
                    }
                })
            }
        </script>
        <!-- ============================================================== -->
        <!-- End footer -->
        <!-- ============================================================== -->
    </div>

    <%- include('../footer') %>